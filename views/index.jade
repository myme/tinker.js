!!!
html(lang="en")
  head
    title Ace editor test
    link(rel="stylesheet",href="/lib/bootstrap.css")
    style
      body {
        background-color: #333;
      }
      #editor {
        position: absolute;
        height: 100%;
        top: 0;
        left: 0;
      }
      #output {
        position: absolute;
        top: 10px;
        right: 10px;
      }
      #output .alert {
        margin-bottom: 5px;
      }
      #output .well {
        margin-bottom: 5px;
        padding: 10px;
      }
      #output *:last-child {
        margin-bottom: 0;
      }

  body
    .container-fluid
      .row-fluid
        #editor.span6
        #output.span6

    script(src="/lib/ace.js",type="text/javascript",charset="utf-8")
    script(src="/lib/keybinding-vim.js",type="text/javascript",charset="utf-8")
    script(src="/src/edit.js",type="text/javascript",charset="utf-8")
